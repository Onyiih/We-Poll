        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/images/image1.jpg" style="width:100%" alt="Image 1">
            <div class="carousel-caption">
                <a>..Take a Poll</a>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/image2.png" style="width:100%" alt="Image 2">
