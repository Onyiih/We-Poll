@model WePoll.Domain.Models.PollModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PollModel</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.Idea)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Idea)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Options)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Yes</th>
                    <th>Total</th>
                </tr>
                <tr>
                    <th>No</th>
                    <th>Total</th>
                </tr>
                @foreach (var o in Model.Options)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => o.Yes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => o.No)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => o.Total)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PollId }) |
